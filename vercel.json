{
  "version": 2,
  "public": false,
  "regions": ["lhr1"],
  "github": { "enabled": false },

  "builds": [
    {
      "src": "vercel/api/*/handler.py",
      "use": "@vercel/python",
      "config": { "pythonVersion": "3.11" }
    }
  ],

  "routes": [
    { "src": "/api/([^/]+)/?$", "dest": "/vercel/api/$1/handler.py" },
    { "src": "/api/([^/]+)/([^/]+)/?$", "dest": "/vercel/api/$1/$2/handler.py" }
  ]
}
